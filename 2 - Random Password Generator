# GUILLERMO GUZMAN - Random Password Generator

import random

chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!%&$^_-"

print("Welcome to the Random Password Generator")

print("\n")

Password_Length = int(input("Select the number of charaters necessary for the password: "))

Password_Amount = int(input("How many passswords do you require?: "))

print("\n")

for y in range(0, Password_Amount):
    Password = ""
    for y in range(0, Password_Length):
        Password_Characters = random.choice(chars)
        Password = Password + Password_Characters
    print("Password: ", Password)

print("\n")
print("Your passwords have been generated")
print("\n")
